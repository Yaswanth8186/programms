#python 

x = int(input("Enter number of rows: "))
for i in range(1,x + 1):
  for j in range(1,i + 1):
    print(i,end ="")
  print()

num = int(input("Enter a number : "))
temp = num
rev = 0
while(num != 0):
  rem = num % 10
  rev = rev * 10 + rem
  num = num // 10
if(temp == rev):
  print("Palindrome  number")
else:
  print("Not palindrome number")
